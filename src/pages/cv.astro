---
import Layout from '~/layouts/Layout.astro'
import PageHeader from '~/components/PageHeader.astro'
import TableOfContents from '~/components/TableOfContents.astro'

const headings = [
  { depth: 2, slug: 'about-me', text: 'About me' },
  { depth: 2, slug: 'work-experience', text: 'Work Experience' },
  { depth: 2, slug: 'education', text: 'Education' },
  { depth: 2, slug: 'certifications', text: 'Certifications' },
  { depth: 2, slug: 'skills', text: 'Skills' },
  { depth: 2, slug: 'projects', text: 'Projects' },
  { depth: 2, slug: 'community-conference', text: 'Community & Conference' },
  { depth: 2, slug: 'contact', text: 'Contact' },
