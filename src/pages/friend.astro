---
import Layout from '~/layouts/Layout.astro'
import PageHeader from '~/components/PageHeader.astro'
import GiscusLoader from '~/components/GiscusLoader.astro'
import DividerText from '~/components/DividerText.astro'
import siteConfig from '~/site.config'

// 友站連結資料
const friendLinks = [
  {
    name: '高中學長的Blog',
    avatar: 'https://avatars.githubusercontent.com/u/84854334?v=4',
    description: '高中學長bob的Blog',
    url: 'https://blog.bob0623.net/',
  },
  {
    name: '呂老闆',
    avatar: 'https://ricky.place/images/profile.jpg',
    description: '呂大老闆',
    url: 'https://ricky.place/',
  },
  {
    name: '第三夏尔',
    avatar: 'https://thirdshire.com/blackcat_avatar.jpg',
    description: '认真生活，积极摸鱼',
    url: 'https://thirdshire.com/',
  },
  {
    name: '元元',
    avatar: 'https://yuan-tw.net/images/2.jfif',
    description: '元元的網站',
    url: 'https://yuan-tw.net/',
  },
  {
    name: 'n1cat',
    avatar: 'https://api.n1cat.xyz/api/v2/objects/avatar/f05glkbbc2o13i0fmr.jpg',
    description: 'my first blog ><',
    url: 'https://n1cat.xyz',
  },
  {
    name: 'yimang',
    avatar: 'https://yimang.tw/images/avatar.webp',
    description: '一個高中生',
    url: 'https://yimang.tw',
  },
  {
    name: 'Osga',
    avatar: 'https://www.osga.dev/_next/image?url=%2Favatar.png&w=640&q=75',
    description: '資安電神',
    url: 'https://www.osga.dev/',
  },
]
---

<Layout title="Friend Links">
  <PageHeader>Friend Links</PageHeader>
  <section class="max-w-2xl">
    <div class="space-y-4 mb-8">
      <p class="opacity-70">
        這裡是我推薦的友站連結，歡迎交流！
      </p>
    </div>

    <!-- 友站連結列表 -->
    <div class="grid gap-4 md:grid-cols-2">
      {
        friendLinks.map((friend) => (
          <a
            href={friend.url}
            target="_blank"
            rel="noopener noreferrer"
            class="flex items-center gap-4 p-4 rounded-lg border border-separator hover:bg-accent/10 transition-colors group"
          >
            {friend.avatar && (


              /* ========== 元元生日帽裝飾 - 開始 (YuanYuan Birthday Hat - Start) ========== */
              <div class={friend.name === '元元' ? 'friend-avatar-container' : ''}>
                
                
                <img
                  src={friend.avatar}
                  alt={friend.name}
                  class="w-12 h-12 rounded-full object-cover"
                />


                {friend.name === '元元' && (
                  <div class="friend-birthday-hat">
                    <div class="friend-hat-cone"></div>
                    <div class="friend-hat-pom"></div>
                  </div>
                )}
              </div>
              /* ========== 元元生日帽裝飾 - 結束 (YuanYuan Birthday Hat - End) ========== */
            
            
            )}
            <div class="flex-1 min-w-0">
              <div class="font-medium group-hover:text-accent transition-colors">
                {friend.name}
              </div>
              {friend.description && (
                <div class="text-sm opacity-70 truncate">
                  {friend.description}
                </div>
              )}
            </div>
            <svg
              class="w-5 h-5 opacity-50 group-hover:opacity-100 group-hover:translate-x-1 transition-all"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M13 7l5 5m0 0l-5 5m5-5H6"
              />
            </svg>
          </a>
        ))
      }
    </div>

    <!-- 友站申請說明 -->
    <div class="mt-8 p-4 rounded-lg bg-accent/5 border border-separator">
      <h3 class="font-semibold mb-2">友站申請</h3>
      <p class="text-sm opacity-70">
        如果你想出現在上面，歡迎在下方留言區留下你的網站資訊，我需要標題、描述、圖片連結、連結！
        這是我的圖片連結</br>
        <link href="https://blog.qian30.net/avatar.jpg" > https://blog.qian30.net/avatar.jpg</link></br>
        如果沒有描述的話，我就會依照我對你了解還有去翻你的 Blog 之後幫你加上去喔！
      </p>
    </div>
  </section>

  <!-- 留言區 -->
  {
    siteConfig.giscus && (
      <section class="max-w-2xl mt-12">
        <DividerText text="Comments" />
        <GiscusLoader />
      </section>
    )
  }
</Layout>

{/* ========== 元元生日帽樣式 - 開始 (YuanYuan Birthday Hat Styles - Start) ========== */}
<style>
  .friend-avatar-container {
    position: relative;
    display: inline-block;
  }

  .friend-birthday-hat {
    position: absolute;
    top: -12px;
    left: 50%;
    transform: translateX(-50%);
    pointer-events: none;
  }

  /* 帽子主體 (錐形) - 縮小版本適配小頭像 */
  .friend-hat-cone {
    width: 0;
    height: 0;
    border-left: 9px solid transparent;
    border-right: 9px solid transparent;
    border-bottom: 16px solid #e74c3c;
    position: relative;
    transform: rotate(-10deg);
  }

  /* 帽子上的條紋裝飾 */
  .friend-hat-cone::before {
    content: '';
    position: absolute;
    bottom: -11px;
    left: -6px;
    width: 12px;
    height: 3px;
    background: #f39c12;
    border-radius: 1px;
  }

  /* 帽子頂部的絨球 */
  .friend-hat-pom {
    position: absolute;
    top: -4px;
    left: 50%;
    transform: translateX(-50%);
    width: 5px;
    height: 5px;
    background: #f1c40f;
    border-radius: 50%;
    box-shadow: 0 0 3px rgba(241, 196, 15, 0.6);
  }

  /* 絨球的高光效果 */
  .friend-hat-pom::after {
    content: '';
    position: absolute;
    top: 1px;
    left: 1px;
    width: 2px;
    height: 2px;
    background: rgba(255, 255, 255, 0.8);
    border-radius: 50%;
  }
</style>
{/* ========== 元元生日帽樣式 - 結束 (YuanYuan Birthday Hat Styles - End) ========== */}
